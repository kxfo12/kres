<Window x:Class="kres.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kres"
        mc:Ignorable="d"
        Background="SeaGreen"
        Title="Wybierz kres" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Height="70" Click="Poprzedni">
            <Image Source="obraz3.png"></Image>
        </Button>
        <StackPanel Width="607" Orientation="Horizontal">
            <Image Height="200" Source="obraz.png" Margin="20,0,0,150"/>
            <TextBlock x:Name="nazwa"/>
            <TextBlock x:Name="opis"/>
            <TextBlock x:Name="liczbaOfiar"/>
            <TextBlock x:Name="rok"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="iloscOczekujacych"></TextBlock>
            <Button></Button>
        </StackPanel>
        <Button Height="70">
            <Image Source="obraz2.png"></Image>
        </Button>
    </StackPanel>
</Window>
